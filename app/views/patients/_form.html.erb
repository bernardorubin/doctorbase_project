<div class="container-fluid">
<p class="error_message" style="text-align:center"><%= @patient.errors.full_messages.join(', ') %></p>
<%= form_for @patient do |f| %>
  <div class="form-group col-xs-12">
  <%= f.label :first_name, "Nombre:", class: "col-md-2 control-label" %>
  <div class="col-md-10">
  <%= f.text_field :first_name, class: "form-control" %>
  </div>
  </div>
  <div class="form-group col-xs-12">
    <%= f.label :last_name, "Apellido:", class: "col-md-2 control-label"  %>
    <div class="col-md-10">
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  </div>
  <div class="form-group col-xs-12">
    <%= f.label :birth_date, "Fecha de Nacimiento:", class: "col-md-2 control-label"  %>
    <div class="col-md-2">
    <%= f.date_select :birth_date, {default: 20.years.ago, start_year: 1950}, class: "form-control" %>
    </div>

      <%= f.label :last_appointment, "Fecha de Última Cita:", class: "col-md-2 control-label"  %>
      <div class="col-md-2">
      <%= f.date_select :last_appointment, {default: 1.week.ago}, class: "form-control" %>
      </div>

    <%= f.label :gender, "Sexo:", class: "col-md-1 control-label"  %>
    <div class="col-md-3">
    <%= f.select :gender, options_for_select(Masculino: 'Masculino', Femenino: 'Femenino'), {},{:class=>"form-control"} %>
    </div>
  </div>
  <div class="form-group col-xs-12">
    <%= f.label :address, "Dirección:", class: "col-md-2 control-label"  %>
    <div class="col-md-10">
    <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>


  <br>



  <div class="container col-xs-12">
  <%= f.submit "Guardar", class: "btn btn-default btn-primary pull-right"  %>
  </div>
<% end %>

</div>
